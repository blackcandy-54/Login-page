<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url("download.jpg");
            backdrop-filter: blur(5px);
            margin: 0;
            padding: 0;
            position: relative;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        #login-container {
            color: white;
            backdrop-filter: blur(15px);
            background: rgba(0, 0, 0, 0.5);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 300px;
            margin: auto;
        }

        input {
            display: inline-block;
            color: white;
            width: 90%;
            font-weight: 200;
            font-size: medium;
            margin: 20px 0px;
            padding: 10px;
            outline: none;
            border-top: none;
            border-left: none;
            border-right: none;
            border-bottom-color: white;
            background: transparent;
            cursor: pointer;
        }

        input::placeholder {
            color: #fcfcfc;
        }

        button {
            margin-top: 10px;
            width: 90%;
            background: #18aae4;
            padding: 10px 20px;
            color: white;
            border: none;
            cursor: pointer;
        }

        button:hover {
            background-color: #65c9f0;
        }

        #log {
            color: red;
            font-weight: bold;
        }

        .bubble {
            position: absolute;
            width: 30px;
            height: 30px;
            background: radial-gradient(circle at 10px 10px, rgba(255, 255, 255, 0.4), rgba(255, 255, 255, 0));
            border: 1px solid rgba(165, 218, 231, 0.678);
            border-radius: 50%;
            animation: bubbleAnimation 5s ease-out forwards;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        @keyframes bubbleAnimation {
            0% {
                transform: translateY(0) scale(1);
                opacity: 1;
            }

            50% {
                transform: translateY(-50px) scale(1.1);
            }

            100% {
                transform: translateY(-100px) scale(0.5);
                opacity: 0;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <div id="login-container">
            <h2>Login</h2>
            <span id="log"></span>
            <form id="login-form">
                <input type="email" id="email" name="email" placeholder="Email" required>

                <input type="password" id="password" name="password" placeholder="Password" required>

                <button type="submit">Login</button>
            </form>
        </div>
    </div>

    <script>
        document.onclick = function (event) {
            const x = event.pageX;
            const y = event.pageY;

            const bubble = document.createElement('span');
            bubble.classList.add("bubble");
            bubble.style.left = x + "px";
            bubble.style.top = y + "px";

            document.body.appendChild(bubble);

            setTimeout(function () {
                bubble.remove();
            }, 5000);
        }

        const loginForm = document.getElementById("login-form")

        loginForm.addEventListener("submit", async (event) => {

            event.preventDefault();

            const email = document.getElementById("email").value;
            const password = document.getElementById("password").value;

            const loginData = {
                email: email,
                password: password
            };

            const loginAPI = "http://127.0.0.1:2002/api/user/login"

            try {

                const res = await fetch(loginAPI, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify(loginData)
                });

                if (res.status === 200) {

                    window.location.replace('http://www.amazon.in/');

                } else if (res.status === 400) {
                    const log = document.getElementById("log")
                    log.innerText = "Invalid Credentials";
                }

            } catch (error) {

                alert(`An error occurred during login: ${error}`);

            }
        })

    </script>

</body>

</html>
